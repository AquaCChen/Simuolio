class DataflowEngine:
    """å°å‹ dataflow runtimeï¼šå®£å‘Š nodes èˆ‡ä¾è³´ï¼Œè¼¸å…¥è®Šæ›´å¾Œé‡ç®— downstreamã€‚"""
    def __init__(self):
        self.nodes = {}
        self.cache = {}
        self.dirty = set()

    def add_node(self, name, deps, fn):
        self.nodes[name] = (deps, fn)

    def set(self, name, value):
        self.cache[name] = value
        self.mark_dirty(name)

    def mark_dirty(self, name):
        self.dirty.add(name)
        changed = True
        while changed:
            changed = False
            for n, (deps, _) in self.nodes.items():
                if n in self.dirty:
                    continue
                if any(d in self.dirty for d in deps):
                    self.dirty.add(n)
                    changed = True

    def get(self, name):
        return self.cache.get(name)

    def run(self):
        computed_any = True
        while computed_any:
            computed_any = False
            for n, (deps, fn) in self.nodes.items():
                if n not in self.dirty:
                    continue
                if all(d in self.cache for d in deps):
                    self.cache[n] = fn(*[self.cache[d] for d in deps])
                    self.dirty.remove(n)
                    computed_any = True


