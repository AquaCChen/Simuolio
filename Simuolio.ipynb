def compute_rebalance(assets):
    """
    æ‰‹é ­ç¾é‡‘ä¸å–®ç¨è¼¸å…¥ï¼šç¸½è³‡ç”¢ä»¥è³‡ç”¢é…ç½®è¡¨ï¼ˆå« CASHï¼‰ç‚ºæº–ã€‚
    """
    total_net = sum(a["value"] for a in assets)
    locked_val = sum(a["value"] for a in assets if a["locked"])
    rebal_pool = total_net - locked_val
    unlocked_tgt_sum = sum(a["target_pct"] for a in assets if (not a["locked"]) and a["ticker"])

    after_values, actions = [], []
    weights, mus, tickers = [], [], []
    after_sum = 0.0

    for a in assets:
        tick = a["ticker"].strip()
        if not tick:
            after_values.append("-")
            actions.append("<div class='action-container'>-</div>")
            weights.append(0.0); mus.append(0.0); tickers.append("")
            continue

        curr = float(a["value"])
        tgt = float(a["target_pct"])
        mu  = float(a["mu_pct"])
        tickers.append(tick); mus.append(mu)

        if a["locked"]:
            target_val = curr
            act = "<div class='action-container'><span class='action-badge badge-hold'>ğŸ”’ é–å®š</span></div>"
        else:
            target_val = (tgt / unlocked_tgt_sum) * rebal_pool if unlocked_tgt_sum > 0 else 0.0
            diff = target_val - curr
            if abs(diff) < 1000:
                act = "<div class='action-container'><span class='action-badge badge-hold'>âœ… æŒæœ‰</span></div>"
            elif diff > 0:
                act = f"<div class='action-container'><span class='action-badge badge-buy'>è²· {int(diff):,}</span></div>"
            else:
                act = f"<div class='action-container'><span class='action-badge badge-sell'>è³£ {int(abs(diff)):,}</span></div>"

        after_sum += target_val
        after_values.append(f"{int(target_val):,}")
        actions.append(act)
        w = (target_val / total_net * 100.0) if total_net > 0 else 0.0
        weights.append(w)

    return {
        "total_net": total_net,
        "curr_sum": total_net,
        "after_sum": after_sum,
        "total_target_pct": sum(a["target_pct"] for a in assets),
        "after_values": after_values,
        "actions": actions,
        "weights": weights,
        "mus": mus,
        "tickers": tickers
    }

def run_monte_carlo(inputs, market, reb):
    years = int(inputs["years"])
    months = years * 12
    sims = int(inputs["sims"])

    w = np.array(reb["weights"], dtype=float) / 100.0
    w = w / w.sum() if w.sum() > 0 else np.array([1.0] + [0.0]*(len(w)-1))

    mu_vec = np.array(reb["mus"], dtype=float) / 100.0
    sigma_vec = market["sigmas"]
    corr = market["corr"]
    cov = np.outer(sigma_vec, sigma_vec) * corr

    port_ret = float(np.dot(w, mu_vec))
    port_vol = float(np.sqrt(w.T @ cov @ w))

    # å› å­ï¼ˆç¤ºç¯„ï¼‰
    factors = {'MKT':0.0,'SMB':0.0,'HML':0.0,'MOM':0.0}
    for i, t in enumerate(reb["tickers"]):
        if t:
            f = get_factor_exposure(t)
            for k in factors:
                factors[k] += float(f.get(k,0.0)) * float(w[i])

    mu_m = port_ret / 12.0
    vol_m = port_vol / np.sqrt(12.0)

    path = np.zeros((months+1, sims))
    path[0] = reb["total_net"]
    monthly_returns = np.zeros((months, sims))

    mig = np.zeros(months+1)
    for m in range(months+1):
        mig[m] = inputs["goal_amt"] * ((1 + inputs["inflation"]/100.0)**(m/12.0))

    debt_sched = build_debt_schedule(
        total_debt=float(inputs["debt_total"]),
        start_month=int(inputs["debt_start_month"]),
        terms=int(inputs["debt_terms"]),
        horizon_months=months
    )

    np.random.seed(42)
    for m in range(1, months+1):
        shock = np.random.normal(mu_m, vol_m, sims)
        monthly_returns[m-1] = shock
        path[m] = path[m-1] * (1 + shock)

        curr_yr = (m-1)//12
        adj_exp = inputs["expense"] * ((1 + inputs["inflation"]/100.0)**curr_yr)
        curr_sal = inputs["salary"] if m >= inputs["income_start_month"] else 0
        path[m] += (curr_sal - adj_exp)

        if m == inputs["lump_month"] and inputs["lump_sum"] > 0:
            path[m] += inputs["lump_sum"]

        if debt_sched[m] > 0:
            path[m] -= debt_sched[m]

        path[m] = np.maximum(path[m], 0)

    # Sharpe / MDD
    rf_m = (1.02)**(1/12) - 1
    avg_excess = np.mean(monthly_returns - rf_m, axis=0)
    std_ret = np.std(monthly_returns, axis=0)
    with np.errstate(divide='ignore', invalid='ignore'):
        sr = np.divide(avg_excess, std_ret)
        sr = np.nan_to_num(sr)
    sharpe = float(np.median(sr) * np.sqrt(12))

    peak = np.maximum.accumulate(path, axis=0)
    with np.errstate(divide='ignore', invalid='ignore'):
        dd = (path - peak) / peak
        dd = np.nan_to_num(dd)
    mdd = float(np.median(np.min(dd, axis=0)))

    pess = int(inputs["pess_pct"])
    med = np.median(path, axis=1)
    wst = np.percentile(path, pess, axis=1)
    bst = np.percentile(path, 100-pess, axis=1)

    succ = float(np.mean(path[-1,:] > mig[-1]) * 100.0)

    return {
        "mig": mig,
        "port_ret": port_ret,
        "port_vol": port_vol,
        "factors": factors,
        "sharpe": sharpe,
        "mdd": mdd,
        "med": med,
        "wst": wst,
        "bst": bst,
        "succ": succ
    }


