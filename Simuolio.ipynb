def clean_symbol(t: str) -> str:
    """å»æ‰ .TW/.TWOï¼Œåƒ…ç”¨æ–¼é¡¯ç¤ºã€‚"""
    return str(t).upper().replace('.TW','').replace('.TWO','')

def get_factor_exposure(ticker_name: str):
    """å› å­æš´éœ²ï¼šåƒ…ç¤ºç¯„ç”¨ã€‚æ‰¾ä¸åˆ°å°±å›é è¨­å€¼ã€‚"""
    key = clean_symbol(ticker_name)
    for k, v in FACTOR_DB.items():
        if k in key or key in k:
            return v
    return {'MKT': 1.0, 'SMB': 0.0, 'HML': 0.0, 'MOM': 0.0}

def parse_int_from_text(s: str, default: int = 0) -> int:
    """
    æ”¯æ´è¼¸å…¥ï¼š'2030'ã€'2030å¹´'ã€'3,000,000'ã€'300è¬'ï¼ˆç°¡æ˜“ï¼‰
    è§£æå¤±æ•—å‰‡å› defaultã€‚
    """
    if s is None:
        return default
    s = str(s).strip()
    if s == "":
        return default

    m = re.search(r"(\d+(?:\.\d+)?)\s*è¬", s)
    if m:
        try:
            return int(float(m.group(1)) * 10000)
        except Exception:
            pass

    s2 = s.replace(",", "").replace(" ", "")
    m2 = re.search(r"\d+", s2)
    if not m2:
        return default
    try:
        return int(m2.group(0))
    except Exception:
        return default

def parse_yyyymm(s: str, default_year=2025, default_month=1):
    """æ”¯æ´ï¼š'2025/01'ã€'2025-01'ã€'202501'ã€'2025å¹´1æœˆ'ã€‚"""
    if s is None:
        return default_year, default_month
    s = str(s).strip()
    if s == "":
        return default_year, default_month

    s2 = s.replace("å¹´", "/").replace("æœˆ", "").replace("-", "/")
    m = re.search(r"(\d{4})\D?(\d{1,2})", s2)
    if m:
        y = int(m.group(1))
        mo = max(1, min(12, int(m.group(2))))
        return y, mo

    m2 = re.search(r"(\d{4})(\d{2})", s)
    if m2:
        y = int(m2.group(1))
        mo = max(1, min(12, int(m2.group(2))))
        return y, mo

    return default_year, default_month

def build_month_axis(start_year, start_month, months_horizon):
    """ç”¢ç”Ÿæ¯å€‹æœˆçš„æ™‚é–“è»¸ï¼ˆç”¨æ–¼ Plotly é¡¯ç¤º YYYY/MMï¼‰ã€‚"""
    start = pd.Timestamp(year=start_year, month=start_month, day=1)
    return pd.date_range(start=start, periods=months_horizon+1, freq="MS")

def month_index_from_year(base_year, target_year):
    """ç”¨ base_year æ¨ç®— target_year å°æ‡‰çš„æœˆä»½ indexï¼ˆæ¯å¹´*12ï¼‰ã€‚"""
    return int((int(target_year) - int(base_year)) * 12)

def build_debt_schedule(total_debt: float, start_month: int, terms: int, horizon_months: int):
    """
    åˆ†æœŸé‚„æ¬¾æ’ç¨‹ï¼š
    - start_monthï¼šå¾ç¬¬å¹¾å€‹æœˆé–‹å§‹æ‰£ï¼ˆ1-basedï¼‰
    - termsï¼šåˆ†å¹¾æœŸ
    """
    sched = np.zeros(horizon_months + 1)
    if total_debt <= 0 or terms <= 0:
        return sched
    pay = total_debt / terms
    for k in range(terms):
        m = start_month + k
        if 1 <= m <= horizon_months:
            sched[m] += pay
    return sched

def apply_corr_stress(corr_df: pd.DataFrame, mode: str):
    """
    ç›¸é—œæ€§å£“åŠ›æ¸¬è©¦ï¼š
    - keepï¼šä¿ç•™åŸæ¨£
    - zeroï¼šcorr < 0 è¨­ç‚º 0ï¼ˆè¼ƒä¿å®ˆï¼‰
    - halfï¼šcorr < 0 è¨­ç‚º 0.5ï¼ˆæ›´ä¿å®ˆ/æ›´æ‚²è§€çš„åˆ†æ•£æ•ˆæœå‡è¨­ï¼‰
    """
    if corr_df is None or corr_df.empty:
        return corr_df
    if mode == "keep":
        return corr_df
    floor = 0.0 if mode == "zero" else 0.5
    out = corr_df.copy()
    np.fill_diagonal(out.values, 1.0)
    mask = out.values < 0
    np.fill_diagonal(mask, False)
    out.values[mask] = floor
    return out


