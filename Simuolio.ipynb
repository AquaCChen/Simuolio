        fig.add_trace(go.Scatter(x=x, y=mc["med"], name='ä¸­ä½æ•¸', line=dict(color='#2962ff', width=3)))
        fig.add_trace(go.Scatter(x=x, y=mc["wst"], name='æ‚²è§€', line=dict(color='#f23645', width=2, dash='dash')))
        fig.add_trace(go.Scatter(x=x, y=mc["mig"], name='é–€æª»', line=dict(color='#00c853', width=2)))

        # é‚„æ¬¾èµ·å§‹ç·š
        debt_m = int(inputs["debt_start_month"])
        if 0 <= debt_m <= months_horizon:
            fig.add_vline(x=axis[debt_m], line_dash="dot", line_color="white")

        # ç›®æ¨™å¹´ç·š
        goal_idx = month_index_from_year(inputs["base_year"], inputs["goal_year"])
        if 0 <= goal_idx <= months_horizon:
            fig.add_vline(x=axis[goal_idx], line_dash="dot", line_color="orange")

        fig.update_layout(
            template="plotly_dark",
            paper_bgcolor='#1e222d',
            plot_bgcolor='#1e222d',
