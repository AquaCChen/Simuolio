def fetch_market_data(tickers: list[str], period="10y"):
    """
    å˜—è©¦æŠ“è‡³å°‘ 10 å¹´ï¼›å›å‚³ï¼š
    - volï¼ˆå¹´åŒ–ï¼‰
    - corr_dfï¼ˆé€±å ±é…¬ç›¸é—œæ€§ï¼‰
    - labelsï¼ˆä¹¾æ·¨ tickerï¼‰
    - actual_yearsï¼ˆå¯¦éš›æŠ“åˆ°çš„å¹´æ•¸ï¼‰
    """
    valid_map = {}
    download = []

    for i, t in enumerate(tickers):
        t = str(t).strip().upper()
        if not t or t in ('CASH','ç¾é‡‘'):
            continue
        if t.isdigit():
            t += ".TW"
        valid_map[i] = t
        download.append(t)

    if not download:
        return None

    raw = yf.download(download, period=period, progress=False, auto_adjust=False)
    if raw is None or raw.empty:
        return None

    if isinstance(raw.columns, pd.MultiIndex):
        df = raw['Adj Close'] if 'Adj Close' in raw.columns.get_level_values(0) else raw['Close']
    else:
        df = raw['Adj Close'] if 'Adj Close' in raw.columns else raw['Close']

    if isinstance(df, pd.Series):
        df = df.to_frame(name=download[0])

    # å¯¦éš›å¹´æ•¸
    try:
        tmin = pd.to_datetime(df.index.min())
        tmax = pd.to_datetime(df.index.max())
        actual_years = float((tmax - tmin).days) / 365.25 if pd.notna(tmin) and pd.notna(tmax) else 0.0
    except Exception:
        actual_years = 0.0

    weekly = df.resample('W-FRI').last()
    rets = weekly.pct_change(fill_method=None).dropna(how="all")
    if rets.empty:
        return None

    vol = (rets.std() * np.sqrt(52)).to_dict()
    corr = rets.corr()

    mapper = {c: clean_symbol(c) for c in corr.columns}
    corr.rename(index=mapper, columns=mapper, inplace=True)

    return {
        "valid_map": valid_map,
        "vol": vol,
        "corr_df": corr,
        "labels": list(corr.columns),
        "actual_years": actual_years
    }

def compute_market_state(assets, corr_mode="zero", period="10y"):
    tickers = [a["ticker"] for a in assets]
    md = fetch_market_data(tickers, period=period)

    sigmas = np.zeros(MAX_ASSETS)
    corr_mat = np.eye(MAX_ASSETS)
    valid_indices = []
    corr_df = None
    labels = []
    actual_years = 0.0

    if md is None:
        for i, a in enumerate(assets):
            if a["ticker"] in ("CASH","ç¾é‡‘"):
                sigmas[i] = 0.005
            elif a["ticker"]:
                sigmas[i] = 0.20
        return {"sigmas": sigmas, "corr": corr_mat, "valid_indices": [], "corr_df": None, "labels": [], "actual_years": 0.0}

    valid_map = md["valid_map"]
    corr_df = apply_corr_stress(md["corr_df"], corr_mode)
    labels = list(corr_df.columns) if corr_df is not None else []
    actual_years = float(md.get("actual_years", 0.0))

    for i in range(MAX_ASSETS):
        t = str(tickers[i]).strip().upper()
        if t in ("CASH","ç¾é‡‘"):
            sigmas[i] = 0.005
            continue
        if i in valid_map:
            raw_t = valid_map[i]
            if raw_t in md["vol"]:
                sigmas[i] = float(md["vol"][raw_t])
                valid_indices.append(i)
            else:
                sigmas[i] = BACKUP_SIGMAS[i]
        else:
            if t:
                sigmas[i] = 0.20

    # å°‡å£“æ¸¬å¾Œ corr_df å›å¡«è‡³ corr_mat
    for i in valid_indices:
        for j in valid_indices:
            s1 = clean_symbol(valid_map[i])
            s2 = clean_symbol(valid_map[j])
            if corr_df is not None and s1 in corr_df.index and s2 in corr_df.columns:
                corr_mat[i, j] = float(corr_df.loc[s1, s2])

    return {
        "sigmas": sigmas,
        "corr": corr_mat,
        "valid_indices": valid_indices,
        "corr_df": corr_df,
        "labels": labels,
        "actual_years": actual_years
    }


