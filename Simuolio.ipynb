engine = DataflowEngine()

def read_inputs_from_ui():
    base_y, base_m = parse_yyyymm(f_start_ym.children[1].value, default_year=2025, default_month=1)
    goal_year = parse_int_from_text(f_goal_year.children[1].value, default=2030)
    goal_amt  = parse_int_from_text(f_goal_amt.children[1].value, default=3000000)

    debt_total = parse_int_from_text(f_debt_total.children[1].value, default=0)
    lump_sum   = parse_int_from_text(f_lump_sum.children[1].value, default=0)

    return {
        "base_year": base_y,
        "base_month": base_m,
        "years": int(f_years.children[1].value),
        "sims": int(f_sims.children[1].value),
        "inflation": float(f_inf.children[1].value),
        "pess_pct": int(f_pess.children[1].value),
        "salary": int(f_sal.children[1].value),
        "income_start_month": int(f_inc.children[1].value),
        "expense": int(f_exp.children[1].value),

        # ç›®æ¨™ï¼šå¹´ + é–€æª»ï¼ˆæœªä¾†å¯æ”¹æˆè²·æˆ¿å¹´/é ç®—ï¼‰
        "goal_year": int(goal_year),
        "goal_amt": float(goal_amt),

        # å‚µå‹™/è‡¨æ™‚æ”¶å…¥
        "debt_total": float(debt_total),
        "debt_start_month": int(f_debt_start.children[1].value),
        "debt_terms": int(f_debt_terms.children[1].value),
        "lump_sum": float(lump_sum),
        "lump_month": int(f_lump_month.children[1].value),

        # ç›¸é—œæ€§å£“æ¸¬
        "corr_mode": corr_mode.value,

        # å›æ¸¬æœŸé–“
        "yf_period": "10y",
    }

def read_assets_from_ui(inputs):
    total_net = max(1, sum(int(r[2].value) for r in ui_assets))
    assets=[]
    for r in ui_assets:
        val = int(r[2].value)
        assets.append({
            "locked": bool(r[0].value),
            "ticker": str(r[1].value).strip(),
            "value": val,
            "now_pct": (val / total_net) * 100.0,
            "target_pct": float(r[4].value),
            "mu_pct": float(r[5].value)
        })
    return assets

engine.add_node("assets", ["inputs"], lambda inputs: read_assets_from_ui(inputs))
engine.add_node("market", ["assets","inputs"], lambda assets, inputs: compute_market_state(
    assets, corr_mode=inputs["corr_mode"], period=inputs["yf_period"]
))
engine.add_node("rebalance", ["assets"], lambda assets: compute_rebalance(assets))
engine.add_node("mc", ["inputs","market","rebalance"], lambda inputs, market, reb: run_monte_carlo(inputs, market, reb))

def render_all(inputs, assets, market, reb, mc):
    # totals
    l_tot_curr.value = f"{int(reb['curr_sum']):,}"
    l_tot_tgt.value  = f"{reb['total_target_pct']:.0f}%"
    l_tot_after.value= f"{int(reb['after_sum']):,}"

    # row fields
    for i, r in enumerate(ui_assets):
        r[3].value = f"{assets[i]['now_pct']:.1f}%"
        r[6].value = reb["actions"][i]
        r[7].value = reb["after_values"][i]

    # vol table + backtest years
    with out_vol:
        clear_output(wait=True)
        yrs = float(market.get("actual_years", 0.0))
        yrs_txt = f"{yrs:.1f}y" if yrs > 0 else "N/A"
        warn = "ï¼ˆä¸è¶³10yï¼‰" if 0 < yrs < 9.95 else ""
        header = f"<div class='small-muted'>Backtest: {yrs_txt} {warn}</div>"
        html = header + "<table style='width:100%; font-size:10px;'>"
        for i in market["valid_indices"]:
            t = clean_symbol(assets[i]["ticker"])[:6]
            v = float(market["sigmas"][i])
            html += f"<tr><td>{t}</td><td style='text-align:right; color:#2962ff'>{v*100:.1f}%</td></tr>"
        html += "</table>"
        display(HTML(html))

    # heatmap
    with out_heatmap:
        clear_output(wait=True)
        corr_df = market["corr_df"]
        labels = market["labels"]
        if corr_df is None or corr_df.empty or len(labels) < 2:
            display(HTML("<div class='small-muted'>ç„¡ç›¸é—œæ€§è³‡æ–™</div>"))
        else:
            plt.close('all')
            plt.figure(figsize=(4, 3.5), facecolor='#1e222d')
            ax = plt.gca()
            ax.set_facecolor('#1e222d')
            sns.heatmap(corr_df, annot=True, fmt=".2f", cmap='vlag', cbar=False,
                        annot_kws={"size": 7}, xticklabels=labels, yticklabels=labels)
            n = len(labels)
            ax.set_xticks(np.arange(n) + 0.5)
            ax.set_yticks(np.arange(n) + 0.5)
            ax.set_xticklabels(labels, rotation=45, ha='right', fontsize=8, color='#d1d4dc')
            ax.set_yticklabels(labels, rotation=0, fontsize=8, color='#d1d4dc')
            plt.title('Correlation (Weekly)', color='#d1d4dc', fontsize=10)
            plt.tight_layout()
            plt.show()

    # summary
    with out_summary:
        clear_output(wait=True)
        net_cls = "val-pos" if mc["med"][-1] > 0 else "val-neg"
        succ_cls = "val-pos" if mc["succ"] > 80 else "val-neg"
        display(HTML(f"""
        <div class="summary-grid">
            <div class="summary-card"><div class="summary-label">æœŸæœ«æ·¨å€¼</div><div class="summary-value {net_cls}">{mc['med'][-1]:,.0f}</div></div>
            <div class="summary-card"><div class="summary-label">CAGR</div><div class="summary-value" style="color:#2962ff">{mc['port_ret']*100:.2f}%</div></div>
            <div class="summary-card"><div class="summary-label">MDD</div><div class="summary-value" style="color:#f23645">{mc['mdd']*100:.1f}%</div></div>
            <div class="summary-card"><div class="summary-label">æˆåŠŸç‡</div><div class="summary-value {succ_cls}">{mc['succ']:.1f}%</div></div>
        </div>
        """))

    # chart: YYYY/MM axis + goal year + debt start
    with out_chart:
        clear_output(wait=True)

        months_horizon = int(inputs["years"]) * 12
        axis = build_month_axis(inputs["base_year"], inputs["base_month"], months_horizon)

        fig = go.Figure()
        x = axis

        fig.add_trace(go.Scatter(
            x=np.concatenate([x, x[::-1]]),
            y=np.concatenate([mc["bst"], mc["wst"][::-1]]),
